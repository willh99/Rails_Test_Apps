<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <% if @user.microposts.any? && @user == current_user %>
      <%= link_to "Create New Post", root_url, class: "btn btn-lg btn-primary" %>
    <% end %>
  </aside>
  <div class="micropost-pag-area col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% else %>
      <%= render "users/no_microposts" %>
    <% end %>
  </div>
</div>
